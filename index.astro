---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Aloba Books - The Pride Communications LLC" description="For bookworms, by passionate writers. Discover books, audiobooks, and music.">
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Background with radial gradient effect -->
      <div class="absolute inset-0 bg-gradient-to-br from-teal-500 via-teal-600 to-teal-700">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.1)_0%,transparent_70%)]"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-white">
          <div class="mb-6">
            <span class="inline-block bg-red-500 text-white px-4 py-2 rounded-full text-sm font-medium mb-4">
              SALE UP TO 20% OFF
            </span>
          </div>
          
          <h1 class="text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            Grab your next<br />
            <span class="text-teal-200">favorite book</span>
          </h1>
          
          <p class="text-xl text-teal-100 mb-8 leading-relaxed">
            Books are the quietest and most constant of friends; they are 
            the most accessible and wisest of counselors, and the most 
            patient of teachers
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/shop" class="bg-red-500 hover:bg-red-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors inline-flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
              GO TO SHOP
            </a>
            <a href="/product-category/audio-books" class="bg-teal-700 hover:bg-teal-800 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors inline-flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M9 12a3 3 0 106 0 3 3 0 00-6 0z"></path>
              </svg>
              GET AUDIO BOOKS
            </a>
          </div>
        </div>
        
        <!-- Right Content - Book Shelves -->
        <div class="relative">
          <div class="grid grid-cols-3 gap-4">
            <!-- Top Shelf -->
            <div class="col-span-3 bg-amber-600 h-4 rounded-lg shadow-lg mb-2"></div>
            <div class="bg-blue-600 h-32 rounded shadow-lg transform -rotate-2"></div>
            <div class="bg-red-600 h-36 rounded shadow-lg"></div>
            <div class="bg-green-600 h-28 rounded shadow-lg transform rotate-1"></div>
            
            <!-- Middle Shelf -->
            <div class="col-span-3 bg-amber-600 h-4 rounded-lg shadow-lg mb-2 mt-4"></div>
            <div class="bg-purple-600 h-30 rounded shadow-lg"></div>
            <div class="bg-orange-600 h-34 rounded shadow-lg transform -rotate-1"></div>
            <div class="bg-indigo-600 h-32 rounded shadow-lg transform rotate-2"></div>
            
            <!-- Bottom Shelf -->
            <div class="col-span-3 bg-amber-600 h-4 rounded-lg shadow-lg mb-2 mt-4"></div>
            <div class="bg-pink-600 h-28 rounded shadow-lg transform rotate-1"></div>
            <div class="bg-yellow-600 h-36 rounded shadow-lg"></div>
            <div class="bg-cyan-600 h-30 rounded shadow-lg transform -rotate-2"></div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Features Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Free Delivery -->
          <div class="text-center p-6 bg-teal-50 rounded-lg">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Free Delivery</h3>
            <p class="text-gray-600">For all member community</p>
          </div>
          
          <!-- Secure Payments -->
          <div class="text-center p-6 bg-teal-50 rounded-lg">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Secure payments</h3>
            <p class="text-gray-600">Supports various payment</p>
          </div>
          
          <!-- 24/7 Support -->
          <div class="text-center p-6 bg-teal-50 rounded-lg">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.944a11.955 11.955 0 00-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">24/7 support</h3>
            <p class="text-gray-600">Ready to serve you</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  /* Custom styles for book spine effects */
  .grid > div:not(.col-span-3) {
    background: linear-gradient(135deg, currentColor 0%, rgba(0,0,0,0.2) 100%);
    position: relative;
  }
  
  .grid > div:not(.col-span-3)::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, rgba(255,255,255,0.3) 0%, transparent 50%, rgba(0,0,0,0.2) 100%);
    border-radius: inherit;
  }
</style>

